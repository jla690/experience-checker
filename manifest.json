{
    "manifest_version": 3,
    "name": "LinkedIn YOE Checker",
    "version": "1.0",
    "description": "Extracts years of experience from LinkedIn job posts",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.linkedin.com/jobs/search-results/*",
                "*://www.linkedin.com/jobs/collections/*",
                "*://www.linkedin.com/jobs/search/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}